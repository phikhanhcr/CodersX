doctype html
head
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='description', content='A cool thing made with Glitch')
  link#favicon(rel='icon', href='https://glitch.com/edit/favicon-app.ico', type='image/x-icon')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
  link(rel='stylesheet', href='/style.css')
  
header
  h1 Child's Dream - BOOK
br
a.btn.btn-primary(href='/books/create') Create
br
br
form(action="/books/search",method="GET")
  input(type='text', placeholder='Search in here', name='search')
  button#btn.btn.btn-primary
    | Search
  button(href="/books").btn.btn-primary
    | Show All  
br
ul#todo
  each item in books
    li 
      span= item.title 
      span &nbsp
      a(href="/books/" + item.id) Delete
      span &nbsp
      span &nbsp
      a(href="/books/edit/" + item.id) Edit
script(src='https://button.glitch.me/button.js')


