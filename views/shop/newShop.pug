doctype html
head
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='description', content='A cool thing made with Glitch')
  link#favicon(rel='icon', href='https://glitch.com/edit/favicon-app.ico', type='image/x-icon')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
  link(rel='stylesheet', href='/style.css')

.container  
  header
    h1 Create a new Shop
  if errors
    each err in errors
      .alert.alert-danger.errorfill= err
  form(method="POST" , enctype="multipart/form-data")
    input(type='text' ,placeholder='Name of the Shop', name='name' , required)
    input(type='text' ,placeholder='Describe Products', name='des' , required )
    input(type="file" , name="avatar")
    button#btn.btn.btn-primary
      | Create